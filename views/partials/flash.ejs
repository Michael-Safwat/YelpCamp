<% if(success && success.length) {%>
  <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-center mx-auto" role="alert">
    <%= success %>
    <button type="button"  class="btn btn-lg btn-close ms-auto" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %>
  
  <% if(error && error.length) {%>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn btn-close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
  </div>
  <% } %>